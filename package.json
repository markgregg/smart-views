  "main::development": "dist/smart-views.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode debug && vite build --emptyOutDir false",
    "build:prod": "tsc && vite build --mode production && vite build --emptyOutDir false",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prettier": "prettier --write src",
    "test": "vitest run --coverage --reporter=default --reporter=junit --outputFile=junit.xml",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static"
  },
